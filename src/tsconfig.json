// TypeScript configuration is not used for compilation
// It is only used for IDE checking and auto-completion
{
  "compilerOptions": {
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": [
      "node",
      "@cloudflare/workers-types",
    ],
    "noEmit": true,
  },
  "include": [
    "./**/*"
  ]
}
