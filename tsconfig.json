// TypeScript configuration is not used for compilation
// It is only used for IDE checking and auto-completion
{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "types": [
      "node",
      "@docusaurus/module-type-aliases",
      "@docusaurus/theme-classic",
    ],
    "baseUrl": "./src",
    "paths": {
      "@site/*": ["./*"]
    },
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "./docs/**/*",
    "./server/**/*",
    "./src/**/*",
    "./docusaurus.config.ts",
    "./sidebars.ts"
  ],
  "references": [
    {
      "path": "./server",
      "@site/*": ["./*"]
    },
  ]
}
