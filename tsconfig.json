// TypeScript configuration is not used for compilation
// It is only used for IDE checking and auto-completion
{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2021",
    "lib": ["ES2021", "dom"],
    "types": [
      "node",
      "@docusaurus/module-type-aliases",
      "@docusaurus/theme-classic",
    ],
    "noEmit": true,
    "paths": {
      "@site/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "./docs/**/*",
    "./server/**/*",
    "./src/**/*",
  ],
  "references": [
    {
      "path": "./server",
      "@site/*": ["./*"]
    },
  ]
}
