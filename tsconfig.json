// TypeScript configuration is not used for compilation
// It is only used for IDE checking and auto-completion
{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "types": [
      "node",
      "@cloudflare/workers-types",
      "@docusaurus/module-type-aliases",
      "@docusaurus/theme-classic",
    ],
    "baseUrl": "./.",
    "paths": {
      "@site/*": ["./*"]
    },
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./docs/**/*",
    "./server/**/*",
    "./scripts/**/*",
    "./docusaurus.config.ts",
    "./sidebars.ts"
  ]
}
